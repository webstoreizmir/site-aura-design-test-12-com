---
interface Stat {
  label: string;
  value: string;
}

interface Props {
  title: string;
  description: string;
  stats: Stat[];
  imageKeyword: string;
}

const { title, description, stats, imageKeyword } = Astro.props;

// GÜNCELLEME: Limitsiz gerçek fotoğraf
const lockId = Math.floor(Math.random() * 1000);
const imgUrl = `https://loremflickr.com/800/1000/${encodeURIComponent(imageKeyword.split(' ')[0])},business/all?lock=${lockId}`;
---

<section id="about" class="py-24 relative overflow-hidden bg-slate-50">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center gap-16">
      
      <!-- Image Side -->
      <div class="w-full md:w-1/2 relative group">
        <div class="absolute -top-4 -left-4 w-24 h-24 bg-[rgb(var(--color-primary))] opacity-20 rounded-full blur-2xl group-hover:opacity-40 transition-opacity"></div>
        <div class="absolute -bottom-4 -right-4 w-32 h-32 bg-[rgb(var(--color-secondary))] opacity-20 rounded-full blur-2xl group-hover:opacity-40 transition-opacity"></div>
        
        <img 
          src={imgUrl} 
          alt="About Us" 
          class="relative rounded-3xl shadow-2xl w-full object-cover h-[600px] hover:scale-[1.02] transition-transform duration-700"
        />
        
        <!-- Experience Badge -->
        <div class="absolute bottom-10 -right-6 bg-white p-8 rounded-2xl shadow-xl border-l-8 border-[rgb(var(--color-primary))] hidden md:block">
          <p class="text-5xl font-bold text-[rgb(var(--color-primary))]">10+</p>
          <p class="text-sm font-bold text-slate-600 uppercase tracking-wider mt-1">Yıllık Tecrübe</p>
        </div>
      </div>

      <!-- Content Side -->
      <div class="w-full md:w-1/2">
        <span class="text-[rgb(var(--color-primary))] font-bold tracking-wider uppercase text-sm mb-2 block">Hakkımızda</span>
        <h2 class="text-4xl md:text-5xl font-heading font-bold mb-8 text-slate-900 leading-tight">
          {title}
        </h2>
        <p class="text-lg text-slate-600 leading-relaxed font-body mb-10">
          {description}
        </p>

        <!-- Stats Grid -->
        <div class="grid grid-cols-2 gap-6 mb-10">
          {stats.map(stat => (
            <div class="p-6 rounded-2xl bg-white shadow-sm border border-slate-100 hover:shadow-md transition-shadow">
              <p class="text-3xl font-bold text-[rgb(var(--color-primary))] mb-2">{stat.value}</p>
              <p class="text-sm font-medium text-slate-500">{stat.label}</p>
            </div>
          ))}
        </div>

        <a 
          href="#contact" 
          class="inline-flex items-center gap-2 text-[rgb(var(--color-primary))] font-bold text-lg hover:text-[rgb(var(--color-secondary))] transition-colors group"
        >
          Bizimle Tanışın
          <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
        </a>
      </div>
    </div>
  </div>
</section>